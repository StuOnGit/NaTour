<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_search">


    <RatingBar
        android:id="@+id/stars_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_namePath_review_card"
        app:layout_constraintTop_toBottomOf="@+id/text_namePath_review_card" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrizione"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/stars_review"
        app:layout_constraintTop_toBottomOf="@id/stars_review"
        android:id="@+id/description_label_review"
        />


    <TextView
        android:id="@+id/review_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textAlignment="textStart"
        app:layout_constraintLeft_toLeftOf="@+id/description_label_review"
        app:layout_constraintStart_toStartOf="@+id/description_label_review"
        app:layout_constraintTop_toBottomOf="@+id/description_label_review" />

    <TextView
        android:id="@+id/review_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:text="@string/prompt_email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_description"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text_namePath_review_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:autoSizeTextType="uniform"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>